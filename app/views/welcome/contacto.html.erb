    <div class="col-md-4" align="center">
   		<div class="panel panel-primary">
    		<div class="panel-heading">
        		<h3 class="panel-title" align="left">Comunicate con nosotros</h3>
        	</div>
            <div class="input-group input-group-sm">
            <span class="input-group-addon" id="sizing-addon1"><i class="glyphicon glyphicon-paperclip"></i></span>
            contacto@dominio.com.co
          	</div>
            <div class="input-group input-group-sm">
            <span class="input-group-addon" id="sizing-addon1"><i class="glyphicon glyphicon-phone"></i></span>
            (0057) 333 555 55 55
          	</div>
            <div class="input-group input-group-sm">
            <span class="input-group-addon" id="sizing-addon1"><i class="glyphicon glyphicon-phone-alt"></i></span>
            (0057)(1) 555 55 55
          	</div>
    	</div>        
	</div>
    <div class="col-md-4" align="center">&nbsp;</div>
    </div>
</div>
<div class="row">
	<div class="col-md-12" align="center">
   		<div class="panel panel-primary">
    		<div class="panel-heading">
        		<h3 class="panel-title" align="left">Encuentranos aquí</h3>
        	</div>
        	<%= image_tag("mapa.png") %> 
    	</div>
	</div>
</div>
<div class="row">
	<div class="col-md-12" align="center">
    <div class="col-md-4" align="center">&nbsp;</div>
    <div class="col-md-4" align="center">
		<div class="panel panel-primary">
    	<div class="panel-heading">
        	<h3 class="panel-title" align="left">Deja un comentario </h3>
        </div>
          <form action="#" method="post" id="commentform">
            <p>
              <label for="comment">Comentario</label>
              <textarea id="comment" name="comment" cols="25" rows="8" maxlength="65525" required="required"></textarea>
            </p>
            <p>
              <label for="author">Nombre *</label>
              <input id="author" name="author" value="" size="30" maxlength="245" required="required" type="text" />
            </p>
            <p>
              <label for="email">Correo *</label>
              <input id="email" name="email" value="" size="30" maxlength="100" aria-describedby="email-notes" required="required" type="text" />
            </p>
          </form>
          <p> </p>
          <p align="left">
            <label>
              <input value="1" name="comment_subscribe" type="checkbox" />
              También suscribirme al newsletter mensual.</label>
          </p>
          <p align="left">
            <input name="subscribe_comments" id="subscribe_comments" value="subscribe" type="checkbox" />
            <label id="subscribe-label" for="subscribe_comments">Recibir un email de respuesta.</label>
          </p>
          <p align="center"><input type="submit" class="btn btn-primary col-md-6" name="enviar" id="enviar" value="Enviar"></p>
		</div>
		</div>
    <div class="col-md-4" align="center">&nbsp;</div>      
    </div>
</div>
</div>